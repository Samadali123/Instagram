<% include ./partials/header.ejs %>
<body class="min-h-screen bg-black text-white flex flex-col items-center p-6">
    <div class="w-full max-w-xl">
        <!-- Back Arrow and Header -->
        <div class="flex items-center text-lg mb-4">
            <a href="/accountstatus" class="mr-3">
                <i class="ri-arrow-left-line ri-lg text-white"></i>
            </a>
            <h1 class="font-medium">Removed content</h1>
        </div>

        <!-- Status Section -->
        <div class="bg-zinc-900 rounded-xl p-4 flex items-center mb-6">
            <div class="bg-gradient-to-r from-yellow-500 to-pink-500 rounded-full p-1 mr-3">
                <div class="bg-zinc-900 p-2 rounded-full">
                    <i class="ri-checkbox-circle-line ri-2x text-pink-500"></i>
                </div>
            </div>
            <div>
                <h2 class="font-medium">Your content is not affected right now</h2>
                <p class="text-gray-400">Thank you for following our <a id="guidelinesLink" href="#" class="text-blue-500 hover:underline">Community Guidelines</a>.</p>
            </div>
        </div>

        <!-- Information Section -->
        <div class="mb-6">
            <h3 class="text-lg font-medium mb-2">What this means</h3>
            <p class="text-gray-400 mb-4">You are not at risk of losing access to your account right now.</p>
            <p class="text-gray-400">We may still take down your account without warning if something you post is a risk to the Instagram community.</p>
        </div>

        <!-- Action Section -->
        <div>
            <h3 class="text-lg font-medium mb-2">What you can do</h3>
            <div class="flex items-center text-blue-500 cursor-pointer">
                <i class="ri-shield-check-line ri-lg mr-2"></i>
                <span id="guidelinesLinkAction">Learn about our Community Guidelines</span>
            </div>
        </div>

        <!-- Remove Content Button -->
        <div class="mt-8">
            <button id="removeContentBtn" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300">
                Remove Content
            </button>
        </div>
    </div>

    <!-- Confirmation Popup -->
    <div id="confirmationPopup" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden">
        <div class="bg-zinc-800 p-6 rounded-lg text-center shadow-lg max-w-sm w-full">
            <h2 class="text-lg font-semibold mb-4">Are you sure you want to remove this content?</h2>
            <div class="flex justify-center">
                <button id="confirmRemoveBtn" class="bg-red-600 text-white px-4 py-2 rounded mr-2 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300">
                    Yes, Remove
                </button>
                <button id="cancelRemoveBtn" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400">
                    Cancel
                </button>
            </div>
        </div>
    </div>

    <!-- Community Guidelines Popup -->
    <div id="guidelinesPopup" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden">
        <div class="bg-zinc-800 p-6 rounded-lg max-w-lg w-full shadow-lg">
            <h2 class="text-xl font-medium mb-4">Community Guidelines</h2>
            <p class="text-gray-400 mb-4">Our Community Guidelines are designed to ensure a positive experience for everyone. Please review them to understand what is allowed and what is not.</p>
            <ul class="list-disc list-inside text-gray-400 mb-4">
                <li>Respect others and their opinions.</li>
                <li>No harassment or hate speech.</li>
                <li>Avoid sharing inappropriate content.</li>
            </ul>
            <p class="text-gray-400 mb-4">For more details, please visit our <a href="/guidelines" class="text-blue-500 hover:underline">Guidelines Page</a>.</p>
            <div class="flex justify-center mt-6">
                <button id="closeGuidelinesBtn" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400">
                    Close
                </button>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        const removeContentBtn = document.getElementById('removeContentBtn');
        const confirmationPopup = document.getElementById('confirmationPopup');
        const confirmRemoveBtn = document.getElementById('confirmRemoveBtn');
        const cancelRemoveBtn = document.getElementById('cancelRemoveBtn');
        const guidelinesLinkAction = document.getElementById('guidelinesLinkAction');
        const guidelinesPopup = document.getElementById('guidelinesPopup');
        const closeGuidelinesBtn = document.getElementById('closeGuidelinesBtn');
        const guidelinesLink = document.getElementById('guidelinesLink');

        // Show popup when Remove Content is clicked
        removeContentBtn.addEventListener('click', () => {
            confirmationPopup.classList.remove('hidden');
        });

        // Handle confirmation
        confirmRemoveBtn.addEventListener('click', () => {
            window.location.href = '/content/removed'; // Redirect to the desired route
        });

        // Cancel and hide popup
        cancelRemoveBtn.addEventListener('click', () => {
            confirmationPopup.classList.add('hidden');
        });

        // Show guidelines popup when clicking on the action link or guidelines link
        const showGuidelinesPopup = () => {
            guidelinesPopup.classList.remove('hidden');
        };

        guidelinesLinkAction.addEventListener('click', (event) => {
            event.preventDefault(); // Prevent default link behavior
            showGuidelinesPopup();
        });

        guidelinesLink.addEventListener('click', (event) => {
            event.preventDefault(); // Prevent default link behavior
            showGuidelinesPopup();
        });

        // Close guidelines popup
        closeGuidelinesBtn.addEventListener('click', () => {
            guidelinesPopup.classList.add('hidden');
        });
    </script>
</body>
