
 <% include ./partials/header.ejs %>
 <div class="container w-full min-h-full text-white overflow-x-hidden overflow-y-auto">
   <div class="header flex gap-6 items-center fixed top-0 left-0 w-full p-4 bg-black z-[9999]">
     <p onclick="window.history.back()"><i class="ri-arrow-left-line text-lg cursor-pointer text-white"></i></p
     <p class="text-xl font-semibold text-white">Comments</p>
   </div>
 
   <div class="comments-container relative w-full min-h-[85vh] overflow-x-hidden overflow-y-auto pt-5 px-3 sm:px-5 md:px-7">
     <% if(userComments.length > 0){  %>
       <% userComments.forEach(function(comment){  %>
         <div class="flex flex-col sm:flex-row gap-4 mb-7">
           <!-- Profile Image -->
           <div class="profile cursor-pointer w-12 h-12 sm:w-16 sm:h-16 md:w-[3rem] md:h-[3rem] rounded-full">
             <img class="w-full h-full object-cover rounded-full" src="<%= comment.post.user.profile %>" alt="">
           </div>
 
           <!-- Comment Content -->
           <div class="second w-full sm:w-9/12 flex flex-col gap-4 ml-0 sm:ml-5">
             <div class="top pl-4">
               <h1 class="cursor-pointer text-base sm:text-lg md:text-xl"><%= comment.post.user.username %></h1>
               <p class="text-sm md:text-base text-gray-400 font-light"><%= comment.post.formattedCreatedAt %></p>
             </div>
 
             <div class="bottom flex gap-3 items-center">
               <!-- User Profile Image -->
               <div class="profile cursor-pointer w-6 h-6 md:w-[1.5rem] md:h-[1.5rem] rounded-full overflow-hidden">
                 <img class="w-full h-full object-cover rounded-full" src="/images/uploads/083e3d70-b7a0-4a3d-972d-e06983ed1155.avif" alt="">
               </div>
 
               <!-- Comment -->
               <a href="/user/posts/comments/<%=comment.post._id %>">
                 <p class="cursor-pointer whitespace-normal sm:whitespace-nowrap text-sm md:text-base">
                   <span><%= comment.user.username %>:</span> <%= comment.text %> 
                   <br> 
                   <span class="text-xs md:text-sm text-gray-400 font-light"><%= comment.formattedCreatedAt %></span>
                 </p>
               </a>
             </div>
           </div>
 
           <!-- Post Image -->
           <a href="/user/posts/comments/<%=comment.post._id %>" class="mt-3 sm:mt-0">
             <div class="postimage cursor-pointer w-[100px] h-[100px] sm:w-[120px] sm:h-[120px] md:w-[150px] md:h-[150px] rounded-md">
               <img class="w-full h-full object-cover hover:scale-110 transition-transform" src="<%= comment.post.image %>" alt="">
             </div>
           </a>
         </div>
       <% }) %>
     <% } else { %>
       <p>Sorry, you haven't commented on any posts recently.</p>
     <% } %>
   </div>
 </div>
 
 <style>
   .container {
     display: flex;
     flex-direction: column;
     align-items: center;
   }
 
   .header {
     display: flex;
     justify-content: flex-start;
     align-items: center;
     padding-left: 5%;
     background-color: rgba(0, 0, 0, 0.8); 
   }
 
   /* For small screen sizes (mobile) */
   @media (max-width: 640px) {
     .header {
       padding-left: 14%;
       padding-right: 14%;
       justify-content: space-between;
     }
     .header p {
       font-size: 1rem;
     }
     .comments-container {
       padding-left: 10px;
       padding-right: 10px;
     }
   }
 
   /* For medium screen sizes (tablet) */
   @media (min-width: 641px) and (max-width: 1024px) {
     .header {
       padding-left: 3%;
     }
     .comments-container {
       padding-left: 20px;
       padding-right: 20px;
     }
   }
 
   /* For large screen sizes (desktop) */
   @media (min-width: 1025px) {
     .header {
       padding-left: 5%;
     }
   }
 </style>
 
 <script>
   // You can add any additional JS here if needed
 </script>
 
