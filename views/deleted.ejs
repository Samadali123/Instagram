
<% include ./partials/header.ejs %>
<div class="container w-full min-h-full text-white overflow-x-hidden overflow-y-auto">
  <div class="header flex gap-6 items-center fixed top-0 left-0 w-full p-4 bg-black z-10">
    <a onclick="window.history.back()">
      <p><i class="ri-arrow-left-line text-lg cursor-pointer text-white"></i></p>
    </a>
    <p class="text-xl font-semibold text-white">Recently deleted</p>
  </div>

  <div class="deleted-posts relative w-full h-auto pt-20 flex flex-wrap gap-6 p-4 justify-center md:justify-between">
    <% if(loginuser.deletedContent.length > 0){ %>
      <% loginuser.deletedContent.forEach(function(elem){  %>
        <div class="post w-full sm:w-[48%] md:w-[30%] lg:w-[22%] h-[200px] cursor-pointer rounded-lg overflow-hidden shadow-lg transition duration-500 hover:scale-105">
          <img class="w-full h-full object-cover" src="<%= elem.image %>" alt="">
        </div>
      <%  })  %>
    <%  }else{ %>
      <p class="text-center text-lg">Sorry, you don't have any recently deleted content.</p>
    <% } %>
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header {
    background-color: rgba(0, 0, 0, 0.9);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .deleted-posts {
    justify-content: center;
  }

  .post img {
    transition: transform 0.3s ease;
  }

  .post:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 640px) {
    .header {
      justify-content: space-between;
    }
    .header p {
      font-size: 1rem;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .header {
      padding-left: 3%;
    }
  }

  @media (min-width: 1025px) {
    .header {
      padding-left: 5%;
    }
  }
</style>

<% include ./partials/footer.ejs %>
