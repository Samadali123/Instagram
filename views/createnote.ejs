

    <% include ./partials/header.ejs %>
<div class="container mx-auto h-full text-white relative flex flex-col justify-between">
    <!-- Top Bar with Close Icon and Share Button -->
    <div class="top-bar w-full flex justify-between items-center px-6 py-4">
        <a href="/profile" class="text-gray-400 hover:text-gray-100 transition">
            <i class="ri-close-line text-2xl"></i>
        </a>
        <p id="share" class="cursor-pointer text-gray-400 hover:text-gray-100 transition">Share</p>
    </div>

    <!-- Center Content with Note Input and Profile Picture -->
    <div class="center flex flex-col justify-center items-center h-[65vh] px-4">
        <!-- Note Input -->
        <div class="note-box bg-zinc-800 rounded-full px-6 py-2 mb-8 shadow-md">
            <form action="/createnote" method="post">
                <input name="note" class="bg-transparent border-none outline-none text-center text-lg text-white placeholder-gray-400 focus:ring-0 w-full" type="text" placeholder="Leave a note...">
            </form>
        </div>

        <!-- Profile Image -->
        <div class="profile-picture w-[80px] h-[80px] rounded-full overflow-hidden shadow-md">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= loginuser.profile %>" alt="User Profile">
        </div>
    </div>
</div>

<!-- Styles for Responsiveness and Professional Layout -->
<style>
    .container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
    }

    .top-bar {
        font-size: 1.125rem;
    }

    .note-box {
        max-width: 320px;
        width: 100%;
    }

    .note-box input {
        font-size: 1rem;
        padding: 8px;
    }

    .profile-picture {
        width: 75px;
        height: 75px;
    }

    /* Responsive for Tablets */
    @media (max-width: 768px) {
        .note-box {
            max-width: 260px;
        }

        .profile-picture {
            width: 60px;
            height: 60px;
        }
    }

    /* Responsive for Mobile Devices */
    @media (max-width: 480px) {
        .top-bar {
            padding: 10px 0;
            flex-direction: column;
            align-items: center;
        }

        .note-box input {
            font-size: 0.875rem;
            padding: 6px;
        }

        .profile-picture {
            width: 50px;
            height: 50px;
        }
    }
</style>

<!-- Script for Input Field and Share Button -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelector("#share").addEventListener("click", function() {
            document.querySelector("form").submit();
        });
    });
</script>

