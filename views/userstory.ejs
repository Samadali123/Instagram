        var progress = document.querySelector(".progress");
        var count = 0;
        var interval = setInterval(function () {
            if (count < 100) {
                count++;
                progress.style.width = `${count}%`;
            } else {
                // window.location = `http://localhost:3000/story/<%= storyuser._id %>/<%= Number(number)+1 %>`;
                const { protocol, host } = window.location;
                const storyId = "<%= storyuser._id %>"; // Server-side rendered variable
                const nextNumber = `<%= Number(number) + 1 %>`
                window.location.href = `${protocol}//${host}/story/${storyId}/${nextNumber}`;

            }

