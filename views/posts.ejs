



<% include ./partials/header.ejs %>
<div class="container w-full min-h-full text-white overflow-x-hidden overflow-y-auto">
  <!-- Header Section -->
  <div class="header flex gap-6 w-screen px-5 py-6  fixed top-0 left-0  z-[999] shadow-md">
    <i onclick="window.history.back()" class="ri-arrow-left-line text-lg ml-8 cursor/com rsor-pointer text-white"></i>
    <p class="text-xl font-semibold text-white mr-8 ">Posts</p>
  </div>

  <!-- User Posts Grid -->
  <div class="user-posts relative w-full pt-20 pb-10 flex flex-wrap gap-6 justify-center p-4">
    <% if(loginuser.posts.length > 0) { %>
      <% loginuser.posts.forEach(function(post){ %>
        <div id="post" data-id="<%= post._id %>" class="post w-full sm:w-[48%] md:w-[30%] lg:w-[22%] xl:w-[18%] h-[30vh] lg:h-[35vh] xl:h-[40vh] cursor-pointer rounded-lg overflow-hidden shadow-lg transform transition duration-500 hover:scale-105 bg-gray-900">
          <img class="w-full h-full object-cover" src="<%= post.image %>" alt="User post">
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-lg font-light text-gray-400">Sorry, you haven't created any posts yet.</p>
    <% } %>
  </div>
</div>

<style>
  /* Container Flex Layout */
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* User Posts */
  .user-posts {
    max-width: 1440px;
    justify-content: center;
  }

  /* Hover Effect on Post Images */
  .post img {
    transition: transform 0.3s ease;
  }

  .post:hover img {
    transform: scale(1.05);
  }

  /* Header Styling */
  .header {
    background-color: rgba(0, 0, 0, 0.9);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    width: 100%;
    justify-content: space-between;
  }

  /* Media Queries */
  @media (max-width: 640px) {
    .header p {
      font-size: 1rem;
    }
  }

  @media (min-width: 768px) {
    .user-posts {
      gap: 1.5rem;
      justify-content: flex-start;
    }
  }
</style>

<script>
  document.querySelector(".user-posts").addEventListener("click", function(event) {
    let postElement = event.target.closest('.post');
    if (postElement) {
      window.location.href = `/user/posts/open/${postElement.dataset.id}`;
    }
  });
</script>

